#include <stdio.h>

int main (){
    int j ,x ,i = 0;
    char livre_chrch[15];
    int nvl_qnt[15];
    
    char titre_livre[100][20];
    char auteur_livre[100];
    int prix_livre[100];
    int quantite_livre[100];
    
    printf("########  Menu  ############\n");
    printf("1 => Ajouter un livre au stock. \n");
    printf("2 => Afficher tous les livres disponibles.\n");
