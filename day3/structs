Challenge 1 : DÃ©finition et Utilisation de Structure

#include <stdio.h>

typedef struct {
   char nom[20];
   char prenom[20];
   int age;
} cd ;

int main () {
    
        cd p1;

        printf("entrer votre nom de : ");
        scanf(" %[^\n]",&p1.nom);
        printf("entrer votre prenom de : ");
        scanf(" %[^\n]",&p1.prenom);
        printf("entrer votre age de : ");
        scanf(" %d",&p1.age);
        
        printf("nom : %s \n",p1.nom);
        printf("prenom : %s \n",p1.prenom);
        printf("age : %d \n",p1.age);
        
    return 0;
}

