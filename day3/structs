Challenge 3 : Passage de Structure en Argument

#include <stdio.h>

typedef struct {
   float longueur;
   float largueur;
} rectangle ;

   void air(rectangle r1f) {
       printf("l'air d'un rectangle : %.2f",r1f.longueur*r1f.largueur);
   }

int main () {
    
   rectangle r1;
   
   printf("entre la longeur du triangle : ");
   scanf("%f",&r1.longueur);
   printf("entre la largeur du triangle : ");
   scanf("%f",&r1.largueur);
   
   air(r1);
    
    return 0;
}

