Challenge 2 : Structure avec Tableau

#include <stdio.h>

typedef struct {
   char nom[20];
   char prenom[20];
   int notes[3];
} cd ;

int main () {
    
        cd p;
        int i,s=0;
        float m;

        printf("entrer votre nom de : ");
        scanf(" %[^\n]",&p1.nom);
        printf("entrer votre prenom de : ");
        scanf(" %[^\n]",&p1.prenom);
        for (i=0;i<3;i++) {
            printf("entrer la note %d du etudiuant : ",i+1,p1.notes[i]);
            scanf("%d",&p1.notes[i]);
            s += p1.notes[i];
        }
        
        m= s/3;
        
        printf("nom : %s \n",p1.nom);
        printf("prenom : %s \n",p1.prenom);
         for (i=0;i<3;i++) {
            printf("la note %d d'etudiant: %d \n",i+1,p1.notes[i]);
        }
        printf("la moyenne des notes est : %.2f \n",m);
        
    return 0;
}

